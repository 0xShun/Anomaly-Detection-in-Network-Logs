# Environment Variables for LogBERT Web Platform
# Copy this file to .env and fill in your values

# =============================================================================
# PYTHONANYWHERE DEPLOYMENT SETTINGS
# =============================================================================

# Django Secret Key (generate a new one for production!)
# Generate with: python -m webplatform.production_settings
# Or: python -c 'import secrets; print(secrets.token_urlsafe(50))'
SECRET_KEY=your-secret-key-here-change-in-production

# Debug Mode (set to False in production, True for local development)
DEBUG=True

# Allowed Hosts (comma-separated, no spaces)
# For local: localhost,127.0.0.1
# For production: yourusername.pythonanywhere.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# API AUTHENTICATION
# =============================================================================

# API Keys for local network authentication (comma-separated, no spaces)
# Generate strong random keys:
#   python -m webplatform.production_settings
#   Or: python -c 'import secrets; print(secrets.token_urlsafe(32))'
LOGBERT_API_KEYS=your-api-key-1,your-api-key-2,your-api-key-3

# =============================================================================
# DATABASE
# =============================================================================

# SQLite is default and works on PythonAnywhere
# No additional configuration needed

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed origins for API requests (comma-separated, no spaces)
# Add your school network IPs/domains that will push data to the API
# Example: https://yourschool.edu,http://192.168.1.100:8000
CORS_ALLOWED_ORIGINS=http://localhost:8081,http://127.0.0.1:8081

# For development only, allow all origins (NEVER use in production!)
# CORS_ALLOW_ALL_ORIGINS=False

# =============================================================================
# LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
